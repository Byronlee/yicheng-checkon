  = select('counts','behave_type_id',behave_types,{:prompt =>'--选择统计项--'},{:class => "btn btn-primary span4"})
  button.btn.btn-primary 长假
  button.btn.btn-primary 总表
  button.btn.btn-primary 审核
  button.btn.btn-primary 下载
hr
.count_resut

- unless @stats.blank?
  table.table.table-condensed.table-bordered
    tr
      - count_table_titles.each do | title|
        th = title     
    - @stats.map do |stat|
      tr 
        td = ancestors stat[:staffid]
        td = stat[:user_no]
        td = stat[:staff_name]
        td = stat[:created_date]
        - stat.checkins.each do |checkin|
          td = checkin.behave.name   
- else
  = render "common/no_content" ,:message =>  t(".no_content.no_count_tip")