  .input-append
    input#appendedPrependedInput type="text" name="range_time"  placeholder="--请选择时间段--"
    button class="btn" type="button" onclick="submit_count($(this))" 统计
  input type="hidden" name="count[start_time]" value=""
  input type="hidden" name="count[end_time]"   value=""

